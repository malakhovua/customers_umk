<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><%= link_to 'На главную', account_url, class: "btn btn-link", style: "font-size: 20px"%></li>
    <li class="breadcrumb-item"><%= link_to 'Андминистрирование', admin_url, class: "btn btn-link", style: "font-size: 20px"%></li>
  </ol>
</nav>
<div class="container-fluid" style="margin-top: 0px">
<h4>Покупатели</h4>
  <table class="table table-bordered">
    <thead class="table table-dark">
    <tr>
      <th>id</th>
      <th>Пометка удаления</th>
      <th>unf_id</th>
      <th>parent_id</th>
      <th>Группа</th>
      <th>Наименование</th>
      <th>Адрес</th>
      <th>ВидЦен</th>
      <th>Email</th>
      <th>Телефон</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td><%= client.id %></td>
        <td><%= client.deletion_mark %></td>
        <td><%= client.unf_id %></td>
        <td><%= client.parent_id %></td>
        <td><%= client.parent_name %></td>
        <td><%= client.name %></td>
        <td><%= client.address %></td>
        <td><%= client.pricetype.nil? ? "" : client.pricetype.name%></td>
        <td><%= client.email %></td>
        <td><%= client.phone %></td>
        <td><%= link_to 'Показать', client %></td>
        <td><%= link_to 'Редактировать', edit_client_path(client) %></td>
        <td><%= link_to 'Удалить', client, method: :delete, data: { confirm: 'Are you sure?' }%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Новый покупатель', new_client_path %>
</div>
