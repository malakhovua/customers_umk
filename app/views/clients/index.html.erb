<nav aria-label="breadcrumb">
<ol class="breadcrumb">
  <li class="breadcrumb-item"><%= link_to 'На главную', account_url, class: "btn btn-link"%></li>
  <li class="breadcrumb-item"><%= link_to 'Продолжить покупку', customer_index_path, class: "btn btn-link"%></li>
</ol>
</nav>
<div class="container-fluid" style="margin-top: 0px">
<h1>Покупатели</h1>

<table class="table">
  <thead>
    <tr>
      <th>#</th>
      <th>Наименование</th>
      <th>Адрес</th>
      <th>Email</th>
      <th>Телефон</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td><%= client.id %></td>
        <td><%= client.name %></td>
        <td><%= client.address %></td>
        <td><%= client.email %></td>
        <td><%= client.phone %></td>
        <td><%= link_to 'Показать', client %></td>
        <td><%= link_to 'Редактировать', edit_client_path(client) %></td>
        <td><%= link_to 'Удалить', client, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Новый покупатель', new_client_path %>
</div>
