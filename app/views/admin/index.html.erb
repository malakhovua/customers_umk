<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><%= link_to 'На главную', account_url, class: "btn btn-link", style: "font-size: 20px" %></li>
  </ol>
</nav>
<div class="container">
  <div class="row">
    <div class="col-md-6 border border-light rounded shadow-sm mb-5">
      <div class="row" style="margin: 10px">
        <h4>Загрузка справочников из 1с:</h4>
        <div class="col-md-12" style="margin-top: 10px">
          <%= link_to 'Узел обмена с 1с', exch_nodes_path, class: 'btn btn-secondary' %>
        </div>
        <div class="col-md-12" style="margin-top: 10px">
          <%= link_to 'Загрузить товары', products_1c83_path, remote: true, class: 'btn btn-secondary' %>
        </div>
        <div class="col-md-12" style="margin-top: 10px">
          <%= link_to 'Загрузить упаковку ', packs_1c83_path, remote: true, class: 'btn btn-secondary' %>
        </div>
        <div class="col-md-12" style="margin-top: 10px">
          <%= link_to 'Загрузить контрагентов', clients_1c83_path, remote: true, class: 'btn btn-secondary' %>
        </div>
        <div class="col-md-12" style="margin-top: 10px">
          <%= link_to 'Загрузить адреса клиентов', addresses_1c383_path, remote: true, class: 'btn btn-secondary' %>
        </div>
        <div class="col-md-12" style="margin-top: 10px">
          <%= link_to 'Загрузить типы цен', pricetypes_1c83_path, remote: true, class: 'btn btn-secondary' %>
        </div>
        <div class="col-md-12" style="margin-top: 10px">
          <%= link_to 'Загрузить цены', prices_1c83_path, remote: true, class: 'btn btn-secondary' %>
        </div>
      </div>
    </div>
    <div class="col-md-6 border border-light rounded shadow-sm mb-5">
      <div class="row" style="margin: 10px">
        <h4>Справочники:</h4>
        <div class="col-md-12" style="margin-top: 10px">
          <%= link_to 'Пользователи', users_url, class: 'btn btn-link', style: 'font-size: 25px;' %>
        </div>
        <div class="col-md-12" style="margin-top: 1px">
          <%= link_to 'Клиенты', clients_url, class: 'btn btn-link', style: 'font-size: 25px;' %>
        </div>
        <div class="col-md-12" style="margin-top: 1px">
          <%= link_to 'Клиенты пользователей', asighnclients_url, class: 'btn btn-link', style: 'font-size: 25px;' %>
        </div>
        <div class="col-md-12" style="margin-top: 1px">
         <%= link_to 'Установить пользователя клиентам', get_clients_list_url(user_id: 1), class: 'btn btn-link', style: 'font-size: 25px;' %>
        </div>
        <div class="col-md-12" style="margin-top: 1px">
          <%= link_to 'Продукция', products_url, class: 'btn btn-link', style: 'font-size: 25px;' %>
        </div>
        <div class="col-md-12" style="margin-top: 1px">
          <%= link_to 'Упаковка', packs_url, class: 'btn btn-link', style: 'font-size: 25px;' %>
        </div>
        <div class="col-md-12" style="margin-top: 1px">
          <%= link_to 'Виды цен', pricetypes_url, class: 'btn btn-link', style: 'font-size: 25px;' %>
        </div>
        <div class="col-md-12" style="margin-top: 1px">
          <%= link_to 'Цены', prices_url, class: 'btn btn-link', style: 'font-size: 25px;' %>
        </div>
      </div>
    </div>
    <%= form_tag orders_to_1c83_path({:id => @product_id, :pack_id => @pack_id}), class:"border border-light rounded shadow-sm mb-5", method: :get, remote: true do %>
      <div class="form-group" style="margin: 30px">
        <div class="row">
          <div class="col">
            <label for="inputEmail4">Начало периода:</label>
            <%= date_field("date1","date_1",value: DateTime.now.strftime("%Y-%m-%d"), class: "form-control")%>
          </div>
          <div class="col">
            <label for="inputEmail4">Окончание периода:</label>
            <%= date_field("date2","date_2",value: DateTime.now.strftime("%Y-%m-%d"), class: "form-control" )%>
          </div>
        </div>
        <div>
        </div>
      </div>
        <div class="form-group row" style="margin: 30px">
          <div class="col-sm-10">
            <%= submit_tag 'Отправка заказа', class: 'btn btn-primary' %>
          </div>
        </div>
    <% end %>
  </div>

</div>