<div class="dropdown-menu dropright-content<%= Product.get_level(@current_group_id).to_s %>" id="<%= @id_element_sub_div %>" style="top:<%=@top.to_s%>px">
  <% @groups.each do |group| %>
    <% unless Product.get_childs_product(group.unf_id).empty? %>
      <div class="inner-dropdown<%= Product.get_level(group.unf_id) %>">
    <% end %>
    <%=link_to  group.title, customer_index_path(:group_id=>group.unf_id), id: group.unf_id, class:"dropdown-item", onmouseover: "getMenu('#{group.unf_id}')" %>
    <% unless Product.get_childs_product(group.unf_id).empty? %>
      </div>
    <% end %>
  <% end %>
</div>
