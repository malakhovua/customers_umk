<p id="notice"><%= notice %></p>

<h1>Продукция</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>id</th>
      <th>parent_id</th>
      <th>unf_id</th>
      <th>unf_parent_id</th>
      <th>Наименование</th>
      <th>Описание</th>
      <th>Вес, шт</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr class='table' >
        <td><%= product.id%></td>
        <td><%= product.parent_id%></td>
        <td><%= product.unf_id%></td>
        <td><%= product.unf_parent_id%></td>
        <td><%= product.title %></td>
        <td><%= product.description %></td>
        <td><%= product.weight %></td>
        <td><%= link_to 'Показать', product %></td>
        <td><%= link_to 'Редактировать', edit_product_path(product) %></td>
        <td><%= link_to 'Удалить', product, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Добавить товар', new_product_path %>
<%= paginate @products%>
