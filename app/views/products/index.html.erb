<p id="notice"><%= notice %></p>

<h1>Продукция</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Наименование</th>
      <th>Описание</th>
      <th></th>
      <th>Цена</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr class= >
        <td><%= product.title %></td>
        <td><%= product.description %></td>
        <td><%= image_tag(product.image_url, class:"img-thumbnail",size: "200x200") %></td>
        <td><%= product.price %></td>
        <td><%= link_to 'Показать', product %></td>
        <td><%= link_to 'Редактировать', edit_product_path(product) %></td>
        <td><%= link_to 'Удалить', product, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Добавить товар', new_product_path %>
<%= paginate @products%>
