<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><%= link_to 'На главную', account_url, class: "btn btn-link", style: "font-size: 20px"%></li>
    <li class="breadcrumb-item"><%= link_to 'Андминистрирование', admin_url, class: "btn btn-link", style: "font-size: 20px"%></li>
  </ol>
</nav>
<p id="notice"><%= notice %></p>
<h4>Продукция</h4>
<table class="table table-bordered">
  <thead class="table table-dark">
    <tr>
      <th>id</th>
      <th>parent_id</th>
      <th>unf_id</th>
      <th>unf_parent_id</th>
      <th>Наименование</th>
      <th>Описание</th>
      <th>Вес, шт</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr class='table' >
        <td><%= product.id%></td>
        <td><%= product.parent_id%></td>
        <td><%= product.unf_id%></td>
        <td><%= product.unf_parent_id%></td>
        <td><%= product.title %></td>
        <td><%= product.description %></td>
        <td><%= product.weight %></td>
        <td><%= link_to 'Показать', product %></td>
        <td><%= link_to 'Редактировать', edit_product_path(product) %></td>
        <td><%= link_to 'Удалить', product, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Добавить товар', new_product_path %>
<%= paginate @products%>
