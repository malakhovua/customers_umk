<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><%= link_to 'На главную', account_url, class: "btn btn-link", style: "font-size: 20px"%></li>
    <li class="breadcrumb-item"><%= link_to 'Андминистрирование', admin_url, class: "btn btn-link", style: "font-size: 20px"%></li>
  </ol>
</nav>
<p id="notice"><%= notice %></p>
<h4>Цены</h4>
<table class="table table-bordered">
  <thead class="table table-dark">
    <tr>
      <th>Продукция</th>
      <th>Упаковка</th>
      <th>Единица</th>
      <th>Вид цены</th>
      <th>Цена</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @prices.each do |price| %>
      <tr>
        <td><%= price.product.title %></td>
        <td><%= price.pack.name %></td>
        <td><%= price.unit.name %></td>
        <td><%= price.pricetype.name %></td>
        <td><%= price.value %></td>
        <td><%= link_to 'Show', price %></td>
        <td><%= link_to 'Edit', edit_price_path(price) %></td>
        <td><%= link_to 'Destroy', price, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

