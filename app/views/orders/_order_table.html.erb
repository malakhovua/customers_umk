
  <h4>Заказы покупателей</h4>
  <table class="table table-striped">
    <thead class="table table-dark">
    <tr>
      <th>#</th>
      <th>Покупатель</th>
      <th>Дата</th>
      <th>Адрес</th>
      <th>Создал</th>
      <th>Комментарий</th>
      <th>1с</th>
      <th>Время 1с</th>
      <th colspan="3"></th>
    </tr>
    </thead>
<tbody>
<% @orders.each do |order| %>
  <tr>
    <td><%= order.id%></td>
    <td><%= order.client.name %></td>
    <td><%= order.date %></td>
    <td><%= order.address_id.nil? ? "" : Address.find(order.address_id).name + order.shipping_address %></td>
    <td><%= order.user.name %></td>
    <td><%= order.comments %></td>
    <td><%= order.server_unf%></td>
    <td><%= order.server_unf_date%></td>

    <td><%= link_to '', order, class: "fa fa-file-text-o", style: "color:  #007bff;"%></td>
    <td><%= link_to '', order, method: :delete, data: { confirm: 'Are you sure?' }, class: "fa fa-trash", style: "color:  #007bff;"  %></td>
  </tr>
<% end %>
</tbody>
  </table>