<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><%= link_to 'На главную', account_url, class: "btn btn-link" , style: "font-size: 20px"%></li>
    <li class="breadcrumb-item"><%= link_to 'Продолжить покупку', customer_index_path, class: "btn btn-link", style: "font-size: 20px"%></li>
  </ol>
</nav>
<div class="container-fluid" style="margin-top: 0px">
  <h1>Заказы</h1>

  <table class="table table-striped">
  <thead>
    <tr>
      <th></th>
      <th>#</th>
      <th>Покупатель</th>
      <th>Дата</th>
      <th>Адрес доставки</th>
      <th>Создал</th>
      <th>Комментарий</th>
      <th colspan="3"></th>
    </tr>
  </thead>
    <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.id%></td>
        <td><%= order.client.name %></td>
        <td><%= order.date %></td>
        <td><%= order.shipping_address %></td>
        <td><%= order.user.name %></td>
        <td><%= order.comments %></td>
        <td><%= link_to '', order, class: "fa fa-file-text-o", style: "color:  #007bff;"%></td>
        <td><%= link_to '', edit_order_path(order), class: "fa fa-pencil-square-o", style: "color:  #007bff;" %></td>
        <td><%= link_to '', order, method: :delete, data: { confirm: 'Are you sure?' }, class: "fa fa-trash", style: "color:  #007bff;"  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

  <%= form_tag orders_to_1c83_path({:id => @product_id, :pack_id => @pack_id}), class:"border border-light rounded shadow-sm mb-5", method: :get, remote: true do %>
    <div class="form-group" style="margin: 30px">
      <div class="row">
        <div class="col">
          <label for="inputEmail4">Начало периода:</label>
          <%= date_field("date1","date_1",value: DateTime.now.strftime("%Y-%m-%d"), class: "form-control")%>
        </div>
        <div class="col">
          <label for="inputEmail4">Окончание периода:</label>
          <%= date_field("date2","date_2",value: DateTime.now.strftime("%Y-%m-%d"), class: "form-control" )%>
        </div>
      </div>
      <div>
      </div>
    </div>
    <div class="form-group row" style="margin: 30px">
      <div class="col-sm-10">
        <%= submit_tag 'Отправить заказ в УНФ', class: 'btn btn-primary' %>
      </div>
    </div>
  <% end %>

<br>

<%#= #link_to 'New Order', new_order_path %>
</div>