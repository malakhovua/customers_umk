<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><%= link_to 'На главную', account_url, class: "btn btn-link" , style: "font-size: 20px"%></li>
    <li class="breadcrumb-item"><%= link_to 'Продолжить покупку', customer_index_path, class: "btn btn-link", style: "font-size: 20px"%></li>
  </ol>
</nav>
<div class="container-fluid" style="margin-top: 0px">
  <h1>Заказы</h1>
  <table class="table table-striped">
  <thead>
    <tr>
      <th></th>
      <th>#</th>
      <th>Покупатель</th>
      <th>Дата</th>
      <th>Адрес доставки</th>
      <th>Создал</th>
      <th>Комментарий</th>
      <th colspan="3"></th>
    </tr>
  </thead>
    <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.id%></td>
        <td><%= order.client.name %></td>
        <td><%= order.date %></td>
        <td><%= order.shipping_address %></td>
        <td><%= order.user.name %></td>
        <td><%= order.comments %></td>
        <td><%= link_to '', order, class: "fa fa-file-text-o", style: "color:  #007bff;"%></td>
        <td><%= link_to '', edit_order_path(order), class: "fa fa-pencil-square-o", style: "color:  #007bff;" %></td>
        <td><%= link_to '', order, method: :delete, data: { confirm: 'Are you sure?' }, class: "fa fa-trash", style: "color:  #007bff;"  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%#= #link_to 'New Order', new_order_path %>
</div>