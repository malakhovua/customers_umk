
<%= render partial: "layouts/menu" %>

<%def draw_tree (node_id, node_title, qty)%>
  <% childs = Product.get_childs_product(node_id)%>
  <% if childs.empty?%>

    <li><%=node_title%></li>

  <% else %>
    <li><span class="caret"> <%=node_title%></span>
      <ul class="nested">
        <% qty = qty + 1%>
  <%end%>

  <% childs.each do |node|%>
    <% draw_tree(node.id, node.title,qty)%>
  <%end %>

<%end%>



<ul id="myUL">
