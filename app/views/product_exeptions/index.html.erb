<h1>Product Exeptions</h1>

<table  class="table table-bordered">
  <thead class="table table-dark">
    <tr>
      <th>Products</th>
      <th>Clients</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @product_exeptions.each do |product_exeption| %>
      <tr>
        <td><%= product_exeption.product.title%></td>
        <td><%= product_exeption.client.name %></td>
        <td><%= link_to 'Show', product_exeption %></td>
        <td><%= link_to 'Edit', edit_product_exeption_path(product_exeption) %></td>
        <td><%= link_to 'Destroy', product_exeption, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

